<Window x:Class="RepairCategories.RepairCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairCategories"
        mc:Ignorable="d"
        Title="Repair Categories" Height="600" Width="1000"
        Background="{StaticResource WindowBackgroundBrush}">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Left pane -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="8">
                <StackPanel Orientation="Vertical">
                    <Label>Devices</Label>
                    <ComboBox Width="220" ItemsSource="{Binding DeviceCategories}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedDeviceCategory}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                    <Label>Search</Label>
                    <Grid>
                        <TextBox Width="320" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" ToolTip="search products and services..." KeyDown="SearchBox_KeyDown" />
                        <Button Content="Search" Width="80" HorizontalAlignment="Right" Command="{Binding FindCommand}" Margin="4,0,0,0" />
                        <Button Content="Show all" Width="80" HorizontalAlignment="Right" Command="{Binding ShowAllCommand}" Margin="92,0,0,0" />
                    </Grid>
                </StackPanel>
            </StackPanel>

            <DataGrid x:Name="WorkOrderItemsGrid" Grid.Row="1" ItemsSource="{Binding RepairsView}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedRepair}" HeadersVisibility="Column" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Device" Binding="{Binding DeviceCategory.Name}" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                    <DataGridTextColumn Header="Model #" Binding="{Binding ModelNumber}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Right pane -->
        <Grid Grid.Column="1" Margin="16,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label>Device</Label>
                <ComboBox ItemsSource="{Binding DeviceCategories}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedRepair.DeviceCategory}" />
                <Label>Product / Service</Label>
                <TextBox Text="{Binding SelectedRepair.Name, UpdateSourceTrigger=PropertyChanged}" />
                <Label>Alt. description</Label>
                <TextBox Text="{Binding SelectedRepair.AltDescription, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80" />
                <Label>Part cost</Label>
                <TextBox Text="{Binding SelectedRepair.PartCost, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Background="{StaticResource YellowInputBrush}" />
                <Label>Labor cost</Label>
                <TextBox Text="{Binding SelectedRepair.LaborCost, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Background="{StaticResource YellowInputBrush}" />
                <Label>Part source</Label>
                <TextBox Text="{Binding SelectedRepair.PartSource, UpdateSourceTrigger=PropertyChanged}" />
                <Label>Order source URL</Label>
                <TextBox Text="{Binding SelectedRepair.OrderSourceUrl, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" Spacing="8">
                <Button Content="Cancel" Width="90" Command="{Binding CancelCommand}" />
                <Button Content="Save" Width="90" Command="{Binding SaveCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
