{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist-main",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "app/electron/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-main",
    "src",
    "app/electron/pdf.ts"
  ]
}
